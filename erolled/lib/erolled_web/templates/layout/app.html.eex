<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>A button</title>
    <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>"/>
    <script defer type="text/javascript" src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
  </head>
  <body align="center">
    <header>
      <h1>Press the button</h1>
      <h5>It's just a button, trust me</h5>
    </header>
    <main role="main" class="container">
      <a id=aNecessario><button id="buto">Do you trust me?</button></a>
    </main>
  </body>
  <script>
    var docButton = document.getElementById("buto")
    var targ = document.getElementById("aNecessario")
    docButton.addEventListener("click", () => {
      res = Math.random() * 10
      if (res >= 5){
        location.href = 'https://www.youtube.com/watch?v=NuC0WpoYAPk'
      }else{
        location.href = 'https://www.youtube.com/watch?v=lHVbwX-BQ-M'
      }
      console.log(res)
    })
  </script>
</html>
